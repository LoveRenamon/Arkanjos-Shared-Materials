"VertexLitGeneric"
{
	// Purpose: Sample for BBQ that modify fresnel when the entity burn
	$PhongFresnelRange_0 ".0" // Fresnel at front view (0ยบ)
	$PhongFresnelRange_1 ".5" // Fresnel at 3/4 view (45ยบ)
	$PhongFresnelRange_2 "1.0" // fresnel at back view/rimlight (180ยบ)

	$PhongFresnelRanges " [ .0 .5 1 ] " // the default 3D vector that will be driven by the above values

	$BBQAmount ".0"
	$BBQMult "1.01"
	$BBQ ".0"

	Proxies
	{
		BBQLevel
		{
			resultVar $BBQAmount
		}
		Multiply
		{
			srcVar1 $BBQAmount
			srcVar2 $BBQMult
			resultVar $BBQ
		}

		Multiply
		{
			srcVar1 $PhongFresnelRange_0
			srcVar2 $BBQ
			resultVar "$PhongFresnelRanges[0]"
		}
		Multiply
		{
			srcVar1 $PhongFresnelRange_1
			srcVar2 $BBQ
			resultVar "$PhongFresnelRanges[1]"
		}
		Multiply
		{
			srcVar1 $PhongFresnelRange_2
			srcVar2 $BBQ
			resultVar "$PhongFresnelRanges[2]"
		}
	}
}
