// First made for KOS-MOS Ver.4
// This is a sample patch for VertexLitGeneric mimic EyeRefract, but static
"VertexLitGeneric"
{
	// textura do olho deve ser usada a mesma para $basetexture e $detail
	$basetexture "shared/generic_base"
	$detail "shared/generic_base"

  $bumpmap "dev/flat_normal" // necessário para ativar Phong
  $lightwarptexture "shared/lightwarp_skin" // mude de acordo com o ramp necessário
	$blendtintcoloroverbase "0"
	$color2 " [ 1 1 1 ] " // se o olho tiver uma cor muito clara como "ciano", use para fazer pequenos ajustes

  $phong "1"
  $phongboost ".8" // Intensidade do highlight
	$phongexponent "51" // força um highlight
	$phongtint " [ 1 1 1 ] "
  $phongdisablehalflambert "0"
	$phongfresnelranges " [ .8 1.5 3.5 ] "

  $detailblendfactor ".3" // edite a intensidade das cores por aqui
  $detailblendmode "0"
  $detailscale "1"

	$envmap "env_cubemap" // edite se necessário fazer os reflexos estáticos
	$envmaptint " [ 1 1 1 ] " // module a intensidade dos reflexos se necessário
	$envmapfresnel ".05"
	$halflambert "1"
	$surfaceprop "flesh"
	$normalmapalphaenvmapmask "1"
	$rimlight "0" // rimlight tem pouco efeito, melhor deixa-lo desativado
}
